<?xml version="1.0" encoding="UTF-8"?>

<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <display-name>Archetype Created Web Application</display-name>

    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
    <error-page>
        <location>/error-page.html</location>
    </error-page>

    <servlet>
        <servlet-name>MainController</servlet-name>
        <display-name>MainController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <display-name>LoginController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <display-name>RegisterController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <description>
  	</description>
        <display-name>SearchController</display-name>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>thuonghth.controllers.SearchController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <description>
  	</description>
        <display-name>LogoutController</display-name>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>thuonghth.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <description>
    </description>
        <display-name>ConfirmMailController</display-name>
        <servlet-name>ConfirmMailController</servlet-name>
        <servlet-class>thuonghth.controllers.ConfirmMailController</servlet-class>
    </servlet>
    <servlet>
        <description>
    </description>
        <display-name>SendCodeAgainController</display-name>
        <servlet-name>SendCodeAgainController</servlet-name>
        <servlet-class>thuonghth.controllers.SendCodeAgainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartInsertionController</servlet-name>
        <display-name>CartInsertionController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartInsertionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartStatusController</servlet-name>
        <display-name>CartStatusController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartStatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartShowingController</servlet-name>
        <display-name>CartShowingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartShowingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartRemovingController</servlet-name>
        <display-name>CartRemovingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.CartRemovingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderingController</servlet-name>
        <display-name>OrderingController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.OrderingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmationController</servlet-name>
        <display-name>ConfirmationController</display-name>
        <description></description>
        <servlet-class>thuonghth.controllers.ConfirmationController</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>OrderSearchingController</display-name>
    	<servlet-name>OrderSearchingController</servlet-name>
    	<servlet-class>thuonghth.controllers.OrderSearchingController</servlet-class>
    </servlet>
    <servlet>
    	<description>
    	</description>
    	<display-name>OrderRemovingController</display-name>
    	<servlet-name>OrderRemovingController</servlet-name>
    	<servlet-class>thuonghth.controllers.OrderRemovingController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmMailController</servlet-name>
        <url-pattern>/ConfirmMailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendCodeAgainController</servlet-name>
        <url-pattern>/SendCodeAgainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartInsertionController</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartStatusController</servlet-name>
        <url-pattern>/changeCartStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartShowingController</servlet-name>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartRemovingController</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderingController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmationController</servlet-name>
        <url-pattern>/confirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>OrderSearchingController</servlet-name>
    	<url-pattern>/viewOrderHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>OrderRemovingController</servlet-name>
    	<url-pattern>/deleteOrder</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>CarRentalDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>SearchController</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>

    <listener>
        <listener-class>thuonghth.listeners.ContextListener</listener-class>
    </listener>
</web-app>
